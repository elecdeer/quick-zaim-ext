{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useHookAtTopLevel": "warn"
			},
			"nursery": {
				"noImplicitAnyLet": "error",
				"useAwait": "warn"
			}
		}
	},
	"formatter": {
		"enabled": true
	}
}
